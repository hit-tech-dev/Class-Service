<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20221006161600" author="thang.nguyenvan">

        <createTable tableName="subject_schedule_relation">

            <column name="id" type="bigint"/>
            <column name="subject_id" type="bigint"/>
            <column name="schedule_id" type="bigint"/>
            <column name="delete_flag" type="bit(1)"/>
            <column name="active_flag" type="bit(1)"/>
            <column name="created_date" type="bigint"/>
            <column name="created_by" type="nvarchar(255)"/>
            <column name="last_modified_date" type="bigint"/>
            <column name="last_modified_by" type="nvarchar(255)"/>

        </createTable>

        <addPrimaryKey tableName="subject_schedule_relation" columnNames="id"/>
        <addAutoIncrement columnDataType="bigint" tableName="subject_schedule_relation" columnName="id"/>

        <addNotNullConstraint tableName="subject_schedule_relation" columnName="subject_id" columnDataType="nvarchar(255)"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="schedule_id" columnDataType="int"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="delete_flag" columnDataType="bit(1)"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="active_flag" columnDataType="bit(1)"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="created_date" columnDataType="bigint"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="created_by" columnDataType="nvarchar(255)"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="last_modified_date" columnDataType="bigint"/>
        <addNotNullConstraint tableName="subject_schedule_relation" columnName="last_modified_by" columnDataType="nvarchar(255)"/>

        <addDefaultValue tableName="subject_schedule_relation" columnName="delete_flag" defaultValueBoolean="false"/>
        <addDefaultValue tableName="subject_schedule_relation" columnName="active_flag" defaultValueBoolean="true"/>

    </changeSet>

</databaseChangeLog>
