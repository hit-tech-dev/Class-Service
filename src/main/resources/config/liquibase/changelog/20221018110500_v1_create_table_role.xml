<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2022101800" author="minh.huudoan">
        <createTable tableName="role">
            <column name="id" type="bigint"/>
            <column name="name" type="nvarchar(255)"/>
            <column name="description" type="nvarchar(255)"/>
            <column name="delete_flag" type="bit(1)"/>
            <column name="active_flag" type="bit(1)"/>
            <column name="created_date" type="bigint"/>
            <column name="created_by" type="nvarchar(255)"/>
            <column name="last_modified_date" type="bigint"/>
            <column name="last_modified_by" type="nvarchar(255)"/>
        </createTable>
        <addPrimaryKey tableName="role" columnNames="id"/>
        <addNotNullConstraint tableName="role" columnName="name"/>
        <addNotNullConstraint tableName="role" columnName="delete_flag" columnDataType="bit(1)"/>
        <addNotNullConstraint tableName="role" columnName="active_flag" columnDataType="bit(1)"/>
        <addNotNullConstraint tableName="role" columnName="created_date" columnDataType="bigint"/>
        <addNotNullConstraint tableName="role" columnName="created_by" columnDataType="nvarchar(255)"/>
        <addNotNullConstraint tableName="role" columnName="last_modified_date" columnDataType="bigint"/>
        <addNotNullConstraint tableName="role" columnName="last_modified_by" columnDataType="nvarchar(255)"/>

        <addDefaultValue tableName="role" columnName="delete_flag" defaultValueBoolean="false"/>
        <addDefaultValue tableName="role" columnName="active_flag" defaultValueBoolean="true"/>
    </changeSet>
</databaseChangeLog>