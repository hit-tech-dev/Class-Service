<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20220318093100" author="hai.nguyenminh">

        <createTable tableName="pipeline_phases">

            <column name="id" type="bigint"/>
            <column name="company_id" type="bigint"/>
            <column name="phase_name" type="nvarchar(225)"/>
            <column name="default_flg" type="tinyint(1)"/>
            <column name="parent_id" type="bigint"/>
            <column name="order" type="int"/>
            <column name="active_flg" type="tinyint(1)"/>
            <column name="created_date" type="datetime"/>
            <column name="created_by" type="nvarchar(225)"/>
            <column name="last_modified_date" type="datetime"/>
            <column name="last_modified_by" type="nvarchar(225)"/>

        </createTable>

        <addPrimaryKey tableName="pipeline_phases" columnNames="id"/>
        <addAutoIncrement columnDataType="bigint" tableName="pipeline_phases" columnName="id"/>

        <addNotNullConstraint tableName="pipeline_phases" columnName="default_flg" columnDataType="tinyint(1)"/>
        <addNotNullConstraint tableName="pipeline_phases" columnName="active_flg" columnDataType="tinyint(1)"/>
        <addNotNullConstraint tableName="pipeline_phases" columnName="created_date" columnDataType="datetime"/>
        <addNotNullConstraint tableName="pipeline_phases" columnName="created_by" columnDataType="nvarchar(225)"/>
        <addNotNullConstraint tableName="pipeline_phases" columnName="last_modified_date" columnDataType="datetime"/>
        <addNotNullConstraint tableName="pipeline_phases" columnName="last_modified_by" columnDataType="nvarchar(225)"/>

        <addDefaultValue tableName="pipeline_phases" columnName="default_flg" defaultValueNumeric="0"/>
        <addDefaultValue tableName="pipeline_phases" columnName="active_flg" defaultValueNumeric="1"/>

    </changeSet>

</databaseChangeLog>
